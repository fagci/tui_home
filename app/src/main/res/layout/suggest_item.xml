<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="52dp"
	android:orientation="horizontal"
	android:padding="8dp">

	<ProgressBar
		android:id="@+id/suggest_itemProgressBar"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:layout_alignParentStart="true"/>

	<ImageView
		android:id="@+id/suggest_itemImageView"
		android:layout_height="match_parent"
		android:layout_width="36dp"
		android:layout_alignParentStart="true"
		android:src="@drawable/ic_launcher"
		android:maxHeight="36dp"
		android:maxWidth="36dp"
		android:adjustViewBounds="true"/>

	<TextView
		android:id="@+id/suggest_itemTextView"
		android:text="Item title"
		android:singleLine="true"
		android:ellipsize="end"
		android:layout_toEndOf="@id/suggest_itemImageView"
		android:layout_centerVertical="false"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:textSize="14sp"
		android:layout_marginStart="8dp"/>

	<TextView
		android:id="@+id/suggest_itemSubtitle"
		android:text="Item subtitle"
		android:singleLine="true"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:textSize="12sp"
		android:layout_below="@id/suggest_itemTextView"
		android:layout_toEndOf="@id/suggest_itemImageView"
		android:layout_marginStart="8dp"
		android:alpha="0.6"
		android:ellipsize="middle" />

	<TextView
		android:id="@+id/suggest_itemDesc"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="8sp"
		android:text="Update date"
		android:layout_alignParentTop="true"
		android:lines="1"/>

	<ImageButton
		android:id="@+id/suggest_itemMenuButton"
		android:layout_width="36dp"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_height="match_parent"
		android:src="@drawable/ic_more_vert"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:maxWidth="36dp"
		android:contentDescription="TODO" />

</RelativeLayout>

